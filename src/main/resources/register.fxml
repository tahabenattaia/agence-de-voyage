<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.RegisterController">
    <HBox alignment="CENTER" spacing="0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Partie gauche : image qui remplit tout l'espace -->
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="350.0">
            <ImageView fx:id="backgroundImage" fitWidth="350.0" fitHeight="600.0" preserveRatio="false">
                <Image url="@images/re.jpg" />
            </ImageView>
        </VBox>

        <!-- Partie droite : formulaire d'inscription -->
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="20" style="-fx-padding: 20;">
            <!-- Logo -->
            <ImageView fitHeight="133.0" fitWidth="329.0" preserveRatio="true">
                <Image url="@images/logo.png" />
            </ImageView>

            <!-- Conteneur principal pour les champs répartis en 2 colonnes -->
            <HBox spacing="20" alignment="TOP_CENTER">
                <!-- Colonne de gauche -->
                <VBox spacing="15">
                    <!-- Type de client -->
                    <VBox spacing="5">
                        <Label text="Type de client:" style="-fx-text-fill: #666666;" />
                        <ComboBox fx:id="clientTypeCombo" prefWidth="180.0"
                                  style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
                    </VBox>

                    <!-- Nom -->
                    <VBox spacing="5">
                        <Label text="Nom:" style="-fx-text-fill: #666666;" />
                        <TextField fx:id="nomField" prefWidth="180.0"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                        </TextField>
                    </VBox>

                    <!-- Email -->
                    <VBox spacing="5">
                        <Label text="Email:" style="-fx-text-fill: #666666;" />
                        <TextField fx:id="emailField" prefWidth="180.0"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                        </TextField>
                    </VBox>
                </VBox>

                <!-- Colonne de droite -->
                <VBox spacing="15">
                    <!-- Mot de passe -->
                    <VBox spacing="5">
                        <Label text="Mot de passe:" style="-fx-text-fill: #666666;" />
                        <PasswordField fx:id="passwordField" prefWidth="180.0"
                                       style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                        </PasswordField>
                    </VBox>

                    <!-- Téléphone -->
                    <VBox spacing="5">
                        <Label text="Téléphone:" style="-fx-text-fill: #666666;" />
                        <TextField fx:id="telephoneField" prefWidth="180.0"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                        </TextField>
                    </VBox>

                    <!-- Adresse -->
                    <VBox spacing="5">
                        <Label text="Adresse:" style="-fx-text-fill: #666666;" />
                        <TextField fx:id="adresseField" prefWidth="180.0"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                        </TextField>
                    </VBox>
                </VBox>
            </HBox>

            <!-- Champs conditionnels disposés en parallèle -->
            <HBox spacing="20" alignment="CENTER">
                <!-- Partie pour particulier -->
                <VBox fx:id="particulierFields" managed="false" visible="false" spacing="5">
                    <Label text="CIN:" style="-fx-text-fill: #666666;" />
                    <TextField fx:id="cinField" prefWidth="180.0"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                    </TextField>
                </VBox>
                <!-- Partie pour entreprise -->
                <VBox fx:id="entrepriseFields" managed="false" visible="false" spacing="5">
                    <Label text="Matricule Fiscale:" style="-fx-text-fill: #666666;" />
                    <TextField fx:id="matriculeFiscaleField" prefWidth="180.0"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                    </TextField>
                    <Label text="Registre de Commerce:" style="-fx-text-fill: #666666;" />
                    <TextField fx:id="registreCommerceField" prefWidth="180.0"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                    </TextField>
                </VBox>
            </HBox>

            <!-- Boutons -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="38.0" prefWidth="250.0"
                        style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                        text="S'INSCRIRE">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20"/>
                    </padding>
                </Button>
                <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" prefHeight="38.0" prefWidth="250.0"
                        style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                        text="RETOUR À LA CONNEXION">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20"/>
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <top>
        <MenuBar>
            <Menu text="Fichier">
                <MenuItem onAction="#handleExit" text="Quitter" />
            </Menu>
            <Menu text="Aide">
                <MenuItem onAction="#handleAbout" text="À propos" />
            </Menu>
        </MenuBar>
    </top>
    <left>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button onAction="#showVoyagesView" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Voyages" />
            <Button onAction="#showClientsView" prefWidth="150" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Clients" />
            <Button onAction="#showReservationsView" prefWidth="150" style="-fx-background-color: #FFC107; -fx-text-fill: white;" text="Réservations" />
            <Button onAction="#showItinerairesView" prefWidth="150" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" text="Itinéraires" />
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white;">
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Bienvenue dans l'application de gestion de voyages" />
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #e0e0e0; -fx-padding: 5;">
            <Label fx:id="statusLabel" text="Prêt" />
        </HBox>
    </bottom>
</BorderPane>

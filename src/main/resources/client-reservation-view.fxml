<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ClientReservationController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Réservation Client" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Code Client:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="codeClientField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Nom:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Button text="Identifier"  GridPane.columnIndex="4" GridPane.rowIndex="0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </GridPane>

    <TableView fx:id="voyageTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Référence" fx:id="referenceColumn"/>
            <TableColumn text="Destination" fx:id="destinationColumn"/>
            <TableColumn text="Date de départ" fx:id="dateDepartColumn"/>
            <TableColumn text="Prix" fx:id="prixColumn"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Nombre de places:"/>
        <Spinner fx:id="nbPlaceSpinner" min="1" max="10" initialValue="1"/>
        <Button text="Réserver" onAction="#handleReservation"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="messageLabel" style="-fx-font-style: italic;"/>
</VBox>


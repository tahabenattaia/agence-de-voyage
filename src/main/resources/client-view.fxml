<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a73e8; -fx-padding: 15 20; -fx-spacing: 10;">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Gestion des Clients" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleRetour" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="33.0" fitWidth="42.0" preserveRatio="true">
                    <image>
                        <Image url="@images/retour.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <Label text="Code Client:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="codeClientField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Nom:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="nomField" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Adresse:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="adresseField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="typeClientCombo" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Détails spécifiques:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <TextField fx:id="detailsField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleCreateClient" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Créer" />
        <Button onAction="#handleUpdateClient" style="-fx-background-color: #FFC107; -fx-text-fill: white;" text="Mettre à jour" />
        <Button onAction="#handleDeleteClient" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Supprimer" />
        <Button onAction="#handleClearFields" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="Effacer les champs" />
    </HBox>

    <TableView fx:id="clientTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="codeClientColumn" prefWidth="93.5999755859375" text="Code Client" />
            <TableColumn fx:id="nomColumn" prefWidth="76.00006103515625" text="Nom" />
            <TableColumn fx:id="telephoneColumn" prefWidth="82.4000244140625" text="Téléphone" />
            <TableColumn fx:id="adresseColumn" prefWidth="91.20001220703125" text="Adresse" />
            <TableColumn fx:id="typeColumn" prefWidth="83.199951171875" text="Type" />
        </columns>
    </TableView>
</VBox>

